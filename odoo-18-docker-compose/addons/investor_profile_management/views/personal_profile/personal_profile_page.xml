<odoo>
  <template id="investor_profile_management.personal_profile_page" name="Personal Profile">
    <t t-call="web.layout">
      <t t-set="title">Personal Profile</t>

      <t t-call-assets="web.assets_frontend" t-js="true"/>
      <t t-set="head">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
      </t>
      <!-- Header Container -->
      <div id="header-container"></div>
      <div class="container py-4">

        <!-- OWL Component Container -->
        <div id="personalProfileWidget" class="w-100" style="display: none;">
          <!-- OWL component will be rendered here -->
        </div>
      </div>

      <!-- Scripts -->
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </t>
  </template>
</odoo> 