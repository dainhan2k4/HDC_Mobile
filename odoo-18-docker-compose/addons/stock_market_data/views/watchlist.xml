<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="watchlist_kanban_view_new" model="ir.ui.view">
        <field name="name">watchlist.data.kanban</field>
        <field name="model">watchlist.data</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban o_hr_employee_kanban stock_market_kanban" on_create="quick_create" archivable="false" sample="1">
                <field name="stage_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card d-flex flex-column oe_kanban_content">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div class="oe_kanban_content flex-grow-1">
                                            <div class="o_kanban_record_title oe_kanban_details">
                                                <strong class="o_kanban_record_title">
                                                    <field name="name"/>
                                                </strong>
                                            </div>
                                            <div class="o_kanban_record_subtitle">
                                                <div>
                                                    <field name="symbol" widget="many2many_tags" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_footer">
                                            <div class="o_kanban_record_bottom">
                                                <div class="oe_kanban_bottom_left">
                                                    <field name="priority" widget="priority" class="oe_inline"/>
                                                </div>
                                                <div class="oe_kanban_bottom_right">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="watchlist_form_view_new" model="ir.ui.view">
        <field name="name">watchlist.data.form</field>
        <field name="model">watchlist.data</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group name="name" string="Watchlist NAME">
                            <field name="name" string="Name"/>
                            <field name="priority" widget="priority" class="oe_inline"/>
                        </group>
                    </group>
                    <group>
                        <group name="name" string="Watchlist">
                            <field name="symbol" string=""/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="watchlist_list_view_new" model="ir.ui.view">
        <field name="name">watchlist.data.view.list</field>
        <field name="model">watchlist.data</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" string="Name"/>
                <field name="priority" widget="priority" class="oe_inline"/>
                <field name="symbol" string="Selected Market List"/>
                <field name="stage_id"/>
            </list>
        </field>
    </record>

    <record id="action_stock_data_watchlist_xml" model="ir.actions.act_window">
        <field name="name">Watchlist</field>
        <field name="res_model">watchlist.data</field>
        <field name="view_mode">kanban,form,list</field>
        <field name="context" eval="{
                'default_is_stock': True,
                }"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> No data yet! </p>
        </field>
    </record>

</odoo>
