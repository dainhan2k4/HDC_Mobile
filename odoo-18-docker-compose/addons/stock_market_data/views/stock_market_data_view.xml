                        </group>
                        <group>
                            <field name="open"/>
                            <field name="dayLow"/>
                            <field name="lastPrice"/>
                            <field name="change"/>
                            <field name="pChange"/>
                            <field name="totalTradedValue"/>
                            <field name="yearHigh"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_nifty_totalmarket_search" model="ir.ui.view">
        <field name="name">nifty.totalmarket.search</field>
        <field name="model">nifty.totalmarket</field>
        <field name="arch" type="xml">
            <search>
                <field name="symbol"/>
            </search>
        </field>
    </record>


