<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="stock_market_data.clientaction" owl="1">
        <div class="stock_market_dashboard">
            <div class="container-fluid">
                <!-- Header Section -->
                <div class="card text-white bg-primary mb-2">
                    <div class="card-header widget">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fa fa-chart-line" style="font-size: 20px; color: #f6ad55;"></i>
                                </div>
                                <div>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">NIFTY:</span>
                                        <span class="widget-value index">
                                            <t t-esc="state.index"/>
                                        </span>
                                        <span class="widget-value market">
                                            <t t-esc="state.market"/>
                                        </span>
                                        <span t-att-class="'widget-value marketStatus ' + (state.marketStatus === 'Open' ? 'market-open' : 'market-closed')">
                                            <i t-att-class="state.marketStatus === 'Open' ? 'fa fa-circle' : 'fa fa-circle'" style="font-size: 6px; margin-right: 4px;"></i>
                                            <t t-esc="state.marketStatus" id="status_view" />
                                        </span>
                                        <span class="widget-value tradeDate">
                                            <i class="fa fa-calendar" style="margin-right: 4px;"></i>
                                            <t t-esc="state.tradeDate"/>
                                        </span>
                                        <span class="widget-value variation">
                                            <i class="fa fa-dollar-sign" style="margin-right: 4px;"></i>
                                            <t t-esc="state.variation"/>
                                        </span>
                                        <t t-if="state.isLoading">
                                            <div class="loading ms-2"></div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            <div class="index-selector">
                                <label for="index-select" class="text-white me-2">
                                    <i class="fa fa-filter" style="margin-right: 4px;"></i>Index:
                                </label>
                                <select id="index-select" class="form-select form-select-sm" style="width: 160px;" t-on-change="onIndexChange">
                                    <t t-foreach="state.availableIndices" t-as="index" t-key="index.key">
                                        <option t-att-value="index.key" t-att-selected="index.key === state.selectedIndex">
                                            <t t-esc="index.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Navigation Bar -->
                    <div class="nav nav_nse">
                        <span class="span_title">
                            <i class="fa fa-globe" style="margin-right: 8px;"></i>
                            NSE MARKET LIVE
                        </span>
                    </div>
                    
                    <!-- Tab Buttons -->
                    <div class="nav nav-tabs" id="nse-div1">
                        <a class="btn-gainers button highlighted" data-toggle="tab" href="#" role="tab" id="gainers-title">
                            <i class="fa fa-arrow-up" style="margin-right: 4px;"></i>GAINERS
                        </a>
                        <a class="btn-losers button" data-toggle="tab" href="#" role="tab" id="losers-title">
                            <i class="fa fa-arrow-down" style="margin-right: 4px;"></i>LOSERS
                        </a>
                    </div>
                </div>

                <!-- Stock Table -->
                <div class="table-container">
                    <table class="table_striped_d">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa fa-tag table-header-icon"></i>Symbol
                                </th>
                                <th>
                                    <i class="fa fa-door-open table-header-icon"></i>Open
                                </th>
                                <th>
                                    <i class="fa fa-arrow-up table-header-icon"></i>High
                                </th>
                                <th>
                                    <i class="fa fa-arrow-down table-header-icon"></i>Low
                                </th>
                                <th>
                                    <i class="fa fa-clock table-header-icon"></i>Prev
                                </th>
                                <th>
                                    <i class="fa fa-dollar-sign table-header-icon"></i>Last
                                </th>
                                <th>
                                    <i class="fa fa-exchange-alt table-header-icon"></i>Change
                                </th>
                                <th>
                                    <i class="fa fa-percentage table-header-icon"></i>%
                                </th>
                                <th>
                                    <i class="fa fa-chart-bar table-header-icon"></i>Vol
                                </th>
                                <th>
                                    <i class="fa fa-money-bill table-header-icon"></i>Value
                                </th>
                                <th>
                                    <i class="fa fa-arrow-up table-header-icon"></i>52H
                                </th>
                                <th>
                                    <i class="fa fa-arrow-down table-header-icon"></i>52L
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="state.isLoading and state.records.length === 0">
                                <tr>
                                    <td colspan="12" style="text-align: center; padding: 40px; color: #a0aec0;">
                                        <div class="loading" style="margin: 0 auto;"></div>
                                        <div style="margin-top: 8px;">Loading...</div>
                                    </td>
                                </tr>
                            </t>
                            <t t-elif="state.records.length === 0">
                                <tr>
                                    <td colspan="12" style="text-align: center; padding: 40px; color: #a0aec0;">
                                        <i class="fa fa-exclamation-triangle" style="font-size: 20px; margin-bottom: 8px;"></i>
                                        <div>No data available</div>
                                    </td>
                                </tr>
                            </t>
                            <t t-else="">
                                <t t-foreach="state.records" t-as="record" t-key="record.id" t-if="state.gainersHighlighted">
                                    <tr class="view_1">
                                        <td>
                                            <span class="widget-value symbol" t-esc="record.symbol" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value open ' + getValueColorClass(record.symbol, 'open', record.open)" t-esc="record.open" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value dayHigh ' + getValueColorClass(record.symbol, 'dayHigh', record.dayHigh)" t-esc="record.dayHigh" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value dayLow ' + getValueColorClass(record.symbol, 'dayLow', record.dayLow)" t-esc="record.dayLow" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value previousClose ' + getValueColorClass(record.symbol, 'previousClose', record.previousClose)" t-esc="record.previousClose" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value lastPrice ' + getValueColorClass(record.symbol, 'lastPrice', record.lastPrice)" t-esc="record.lastPrice" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value change ' + getValueColorClass(record.symbol, 'change', record.change)" t-esc="record.change" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value pChange ' + getValueColorClass(record.symbol, 'pChange', record.pChange)" t-esc="record.pChange" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value totalTradedVolume ' + getValueColorClass(record.symbol, 'totalTradedVolume', record.totalTradedVolume)" t-esc="record.totalTradedVolume" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value totalTradedValue ' + getValueColorClass(record.symbol, 'totalTradedValue', record.totalTradedValue)" t-esc="record.totalTradedValue" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value yearHigh ' + getValueColorClass(record.symbol, 'yearHigh', record.yearHigh)" t-esc="record.yearHigh" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value yearLow ' + getValueColorClass(record.symbol, 'yearLow', record.yearLow)" t-esc="record.yearLow" />
                                        </td>
                                    </tr>
                                </t>
                                <t t-foreach="state.records" t-as="record" t-key="record.id" t-if="state.losersHighlighted">
                                    <tr class="view_2">
                                        <td>
                                            <span class="widget-value symbol" t-esc="record.symbol" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value open ' + getValueColorClass(record.symbol, 'open', record.open)" t-esc="record.open" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value dayHigh ' + getValueColorClass(record.symbol, 'dayHigh', record.dayHigh)" t-esc="record.dayHigh" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value dayLow ' + getValueColorClass(record.symbol, 'dayLow', record.dayLow)" t-esc="record.dayLow" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value previousClose ' + getValueColorClass(record.symbol, 'previousClose', record.previousClose)" t-esc="record.previousClose" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value lastPrice ' + getValueColorClass(record.symbol, 'lastPrice', record.lastPrice)" t-esc="record.lastPrice" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value change ' + getValueColorClass(record.symbol, 'change', record.change)" t-esc="record.change" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value pChange ' + getValueColorClass(record.symbol, 'pChange', record.pChange)" t-esc="record.pChange" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value totalTradedVolume ' + getValueColorClass(record.symbol, 'totalTradedVolume', record.totalTradedVolume)" t-esc="record.totalTradedVolume" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value totalTradedValue ' + getValueColorClass(record.symbol, 'totalTradedValue', record.totalTradedValue)" t-esc="record.totalTradedValue" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value yearHigh ' + getValueColorClass(record.symbol, 'yearHigh', record.yearHigh)" t-esc="record.yearHigh" />
                                        </td>
                                        <td>
                                            <span t-att-class="'widget-value yearLow ' + getValueColorClass(record.symbol, 'yearLow', record.yearLow)" t-esc="record.yearLow" />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- Footer Info -->
                <div class="footer-info">
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="me-4">
                            <i class="fa fa-sync-alt" style="margin-right: 4px; color: #4299e1;"></i>
                            <span>Realtime 1s</span>
                        </div>
                        <div class="me-4">
                            <i class="fa fa-clock" style="margin-right: 4px; color: #38a169;"></i>
                            <span><t t-esc="state.lastUpdateTime"/></span>
                        </div>
                        <div>
                            <i class="fa fa-signal" style="margin-right: 4px; color: #f6ad55;"></i>
                            <span>Live NSE Data</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>