<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PayOS Configuration Form View -->
    <record id="view_payos_config_form" model="ir.ui.view">
        <field name="name">payos.config.form</field>
        <field name="model">payos.config</field>
        <field name="arch" type="xml">
            <form string="PayOS Configuration">
                <header>
                    <button name="action_test_connection" string="Test Kết nối" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_connection" type="object" class="oe_stat_button" icon="fa-plug">
                            <field name="last_connection_status" widget="statinfo" string="Trạng thái"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="last_connection_date" readonly="1"/>
                            <field name="last_connection_status" readonly="1" widget="badge" 
                                   decoration-success="last_connection_status == 'success'"
                                   decoration-danger="last_connection_status == 'failed'"
                                   decoration-muted="last_connection_status == 'not_tested'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Thông tin đăng nhập PayOS" name="credentials">
                            <group>
                                <field name="client_id" password="True" placeholder="Nhập Client ID"/>
                                <field name="api_key" password="True" placeholder="Nhập API Key"/>
                                <field name="checksum_key" password="True" placeholder="Nhập Checksum Key"/>
                            </group>
                        </page>
                        <page string="Cấu hình API" name="api_config">
                            <group>
                                <field name="base_url" placeholder="https://api-merchant.payos.vn"/>
                            </group>
                        </page>
                        <page string="Trạng thái kết nối" name="status">
                            <group>
                                <field name="last_connection_date" readonly="1"/>
                                <field name="last_connection_status" readonly="1" widget="badge"
                                       decoration-success="last_connection_status == 'success'"
                                       decoration-danger="last_connection_status == 'failed'"
                                       decoration-muted="last_connection_status == 'not_tested'"/>
                                <field name="connection_message" readonly="1" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- PayOS Configuration Tree View -->
    <record id="view_payos_config_tree" model="ir.ui.view">
        <field name="name">payos.config.tree</field>
        <field name="model">payos.config</field>
        <field name="arch" type="xml">
            <list string="Cấu hình PayOS" 
                  decoration-success="is_active == True and last_connection_status == 'success'"
                  decoration-muted="is_active == False"
                  decoration-danger="last_connection_status == 'failed'">
                <field name="name"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="last_connection_date" widget="datetime"/>
                <field name="last_connection_status" widget="badge"
                       decoration-success="last_connection_status == 'success'"
                       decoration-danger="last_connection_status == 'failed'"
                       decoration-muted="last_connection_status == 'not_tested'"/>
            </list>
        </field>
    </record>

    <!-- PayOS Configuration Search View -->
    <record id="view_payos_config_search" model="ir.ui.view">
        <field name="name">payos.config.search</field>
        <field name="model">payos.config</field>
        <field name="arch" type="xml">
            <search string="PayOS Configuration">
                <field name="name"/>
                <filter string="Đang hoạt động" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Chưa hoạt động" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Kết nối thành công" name="success" domain="[('last_connection_status', '=', 'success')]"/>
                <filter string="Kết nối thất bại" name="failed" domain="[('last_connection_status', '=', 'failed')]"/>
                <filter string="Chưa kiểm tra" name="not_tested" domain="[('last_connection_status', '=', 'not_tested')]"/>
            </search>
        </field>
    </record>

    <!-- PayOS Configuration Action -->
    <record id="action_payos_config" model="ir.actions.act_window">
        <field name="name">Cấu hình PayOS</field>
        <field name="res_model">payos.config</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_payos_config_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo cấu hình PayOS đầu tiên
            </p>
            <p>
                Cấu hình PayOS để tích hợp thanh toán VietQR vào hệ thống.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_payos_config" 
              name="Cấu hình PayOS" 
              parent="menu_payos_settings" 
              action="action_payos_config" 
              groups="base.group_system" 
              sequence="20"/>
</odoo>

