<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Root Menu -->
        <menuitem id="menu_transaction_list_root"
                  name="Transaction List"
                  sequence="10"/>
        
        <!-- Portfolio Transaction Action -->
        <record id="action_portfolio_transaction" model="ir.actions.act_window">
            <field name="name">Danh sách lệnh giao dịch</field>
            <field name="res_model">portfolio.transaction</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_pending': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo lệnh giao dịch đầu tiên
                </p>
            </field>
        </record>
        
        <!-- Matched Orders Action -->
        <record id="action_transaction_matched_orders" model="ir.actions.act_window">
            <field name="name">Danh sách lệnh thỏa thuận</field>
            <field name="res_model">transaction.matched.orders</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_matched_orders_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_matched_orders_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No matched orders found
                </p>
                <p>
                    Create your first matched order.
                </p>
            </field>
        </record>
        
        
        <!-- Menu Items -->
        <menuitem id="menu_portfolio_transaction"
                  name="Danh sách lệnh giao dịch"
                  parent="menu_transaction_list_root"
                  action="action_portfolio_transaction"
                  sequence="10"/>
        
        <menuitem id="menu_transaction_matched_orders"
                  name="Danh sách lệnh thỏa thuận"
                  parent="menu_transaction_list_root"
                  action="action_transaction_matched_orders"
                  sequence="20"/>
        
        <menuitem id="menu_transaction_maturity_notification"
                  name="Thông báo đáo hạn"
                  parent="menu_transaction_list_root"
                  action="action_transaction_maturity_notification"
                  sequence="30"/>
        
        <!-- Removed Partial Matching and Order Queue menus -->
        
    </data>
</odoo>
