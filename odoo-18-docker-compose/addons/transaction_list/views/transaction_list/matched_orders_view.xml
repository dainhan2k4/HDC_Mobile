<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_transaction_matched_orders_list" model="ir.ui.view">
        <field name="name">transaction.matched.orders.list</field>
        <field name="model">transaction.matched.orders</field>
        <field name="arch" type="xml">
            <list string="Matched Orders">
                <field name="name"/>
                <field name="match_date"/>
                <field name="buy_order_id"/>
                <field name="sell_order_id"/>
                <field name="buy_user_id"/>
                <field name="sell_user_id"/>
                <field name="fund_id"/>
                <field name="matched_quantity"/>
                <field name="matched_price"/>
                <field name="total_value"/>
                <field name="buy_units"/>
                <field name="sell_units"/>
                <field name="buy_price"/>
                <field name="sell_price"/>
                <field name="buy_remaining_units"/>
                <field name="sell_remaining_units"/>
                <field name="status" widget="badge" decoration-info="status == 'draft'" decoration-success="status == 'confirmed'" decoration-warning="status == 'done'" decoration-danger="status == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_transaction_matched_orders_form" model="ir.ui.view">
        <field name="name">transaction.matched.orders.form</field>
        <field name="model">transaction.matched.orders</field>
        <field name="arch" type="xml">
            <form string="Matched Order">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="match_date"/>
                            <field name="buy_order_id"/>
                            <field name="sell_order_id"/>
                            <field name="buy_user_id"/>
                            <field name="sell_user_id"/>
                            <field name="fund_id"/>
                        </group>
                        <group>
                            <field name="matched_quantity"/>
                            <field name="matched_price"/>
                            <field name="total_value"/>
                            <field name="buy_units"/>
                            <field name="sell_units"/>
                            <field name="buy_price"/>
                            <field name="sell_price"/>
                            <field name="buy_remaining_units"/>
                            <field name="sell_remaining_units"/>
                            <field name="buy_term_months"/>
                            <field name="sell_term_months"/>
                            <field name="buy_interest_rate"/>
                            <field name="sell_interest_rate"/>
                            <field name="buy_in_time"/>
                            <field name="sell_in_time"/>
                            <field name="buy_out_time"/>
                            <field name="sell_out_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_transaction_matched_orders_search" model="ir.ui.view">
        <field name="name">transaction.matched.orders.search</field>
        <field name="model">transaction.matched.orders</field>
        <field name="arch" type="xml">
            <search string="Search Matched Orders">
                <field name="name"/>
                <field name="buy_order_id"/>
                <field name="sell_order_id"/>
                <field name="fund_id"/>
                <field name="buy_user_id"/>
                <field name="sell_user_id"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="Done" name="done" domain="[('status', '=', 'done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('status', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                    <filter string="Match Date" name="match_date" context="{'group_by': 'match_date:day'}"/>
                    <filter string="Fund" name="group_fund" context="{'group_by': 'fund_id'}"/>
                    <filter string="Buy User" name="group_buy_user" context="{'group_by': 'buy_user_id'}"/>
                    <filter string="Sell User" name="group_sell_user" context="{'group_by': 'sell_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Matched Orders Action -->
    <record id="action_transaction_matched_orders" model="ir.actions.act_window">
        <field name="name">Lệnh khớp thỏa thuận</field>
        <field name="res_model">transaction.matched.orders</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có lệnh khớp thỏa thuận nào
            </p>
        </field>
    </record>

    <!-- Menu Item for Matched Orders -->
    <menuitem id="menu_transaction_matched_orders"
              name="Lệnh khớp thỏa thuận"
              parent="menu_transaction_list_root"
              action="action_transaction_matched_orders"
              sequence="20"/>
</odoo>