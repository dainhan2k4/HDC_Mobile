<odoo>
    <template id="country_form" name="Tạo mới Quốc gia">
        <t t-call="web.layout">
            <t t-set="title">Tạo mới Quốc gia</t>
            <t t-call-assets="web.assets_backend" t-js="true"/>
            <div class="d-flex">
                <t t-call="fund_management_control.sidebar_template"/>
                <main class="flex-grow-1 p-4">
                    <div class="container-fluid">
                        <div class="mb-4">
                            <h2 class="h3 fw-bold">Tạo mới Quốc gia</h2>
                            <nav aria-label="breadcrumb">
                              <ol class="breadcrumb small">
                                <li class="breadcrumb-item"><a href="/country_list" class="text-decoration-none">Trở về</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Tạo mới Quốc gia</li>
                              </ol>
                            </nav>
                        </div>
                        <div class="card shadow-sm form-container">
                            <div class="card-body p-5">
                                <form t-att-action="edit_mode and country and '/country/update/' + str(country.id) or '/country/create'" method="POST">
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="name" class="form-label">Tên quốc gia (*)</label>
                                            <input type="text" class="form-control" name="name" required="1" t-att-value="country and country.name or ''"/>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="english_name" class="form-label">Tên Tiếng Anh (*)</label>
                                            <input type="text" class="form-control" name="english_name" required="1" t-att-value="country and country.english_name or ''"/>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="code" class="form-label">Mã quốc gia (*)</label>
                                            <input type="text" class="form-control" name="code" required="1" t-att-value="country and country.code or ''"/>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="phone_code" class="form-label">Tên vùng điện thoại (*)</label>
                                            <input type="text" class="form-control" name="phone_code" required="1" t-att-value="country and country.phone_code or ''"/>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="postal_code" class="form-label">Mã bưu chính</label>
                                            <input type="text" class="form-control" name="postal_code" t-att-value="country and country.postal_code or ''"/>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="vsd_code" class="form-label">Mã giao dịch VSD (*)</label>
                                            <input type="text" class="form-control" name="vsd_code" required="1" t-att-value="country and country.vsd_code or ''"/>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="sort_order" class="form-label">Trọng số sắp xếp (*)</label>
                                            <input type="number" class="form-control" name="sort_order" required="1" t-att-value="country and country.sort_order or ''"/>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" role="switch" name="active" t-att-checked="not country or country.active and 'checked' or False"/>
                                                <label class="form-check-label">Kích hoạt</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center mt-4">
                                        <a href="/country_list" class="btn btn-secondary btn-lg px-5">Hủy</a>
                                        <button type="submit" class="btn btn-primary btn-lg px-5">Lưu</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </t>
    </template>
</odoo> 
