<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="asset_management_page" name="Asset Management Page">
        <t t-call="web.layout">
            <t t-set="title">Quản lý tài sản</t>

            <!-- Import Bootstrap CSS -->
            <t t-set="head">
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
                <!-- Font Awesome -->
                <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
                <!-- Google Fonts -->
                <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&amp;display=swap" rel="stylesheet"/>
                <link rel="stylesheet" href="/asset_management/static/src/css/asset_management_custom.css"/>
            </t>

            <!-- Header Container -->
            <div id="header-container"></div>

            <!-- Main Container -->
            <div class="container s_hero pt32 pb32">
                <div class="row">
                    <div class="col-12 text-center">
                    </div>
                </div>
                <!-- Widget Container -->
                <div id="asset-management-widget" class="w-100"></div>
            </div>

            <!-- Pass data from controller to JavaScript -->
            <script type="text/javascript">
                window.assetManagementData = <t t-raw="asset_data"/>;
            </script>

            <!-- Import JavaScript -->
            <t t-set="js">
                <!-- Chart.js -->
                <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            </t>

            <t t-call-assets="web.assets_frontend" t-js="true"/>
        </t>
    </template>
</odoo> 