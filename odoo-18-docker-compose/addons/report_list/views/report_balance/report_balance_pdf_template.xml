<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_list.report_balance_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Báo cáo số dư</h2>
                    
                    <div style="margin: 20px 0;">
                        <p><strong>Công ty:</strong> <span t-esc="company_name"/></p>
                        <p><strong>Ngày xuất:</strong> <span t-esc="export_time"/></p>
                        <p><strong>Người xuất:</strong> <span t-esc="user_name"/></p>
                        <p><strong>Tổng số bản ghi:</strong> <span t-esc="total_records"/></p>
                        
                        <t t-if="selected_product">
                            <p><strong>Quỹ:</strong> <span t-esc="selected_product"/></p>
                        </t>
                    </div>
                    
                    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                        <thead>
                            <tr style="background-color: #f8f9fa;">
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">STK</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">Nhà đầu tư</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">ĐKSH</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">Quỹ</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">Chương trình</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">Số CCQ</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">Giá trị</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="records" t-as="record">
                                <tr>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.account_number">
                                            <span t-esc="record.account_number"/>
                                        </t>
                                        <t t-else="">
                                            <span>-</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.investor_name">
                                            <span t-esc="record.investor_name"/>
                                        </t>
                                        <t t-else="">
                                            <span>-</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.dksh">
                                            <span t-esc="record.dksh"/>
                                        </t>
                                        <t t-else="">
                                            <span>-</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.fund_name">
                                            <span t-esc="record.fund_name"/>
                                        </t>
                                        <t t-else="">
                                            <span>-</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.fund_ticker">
                                            <span t-esc="record.fund_ticker"/>
                                        </t>
                                        <t t-else="">
                                            <span>-</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.units">
                                            <span t-esc="'{:,.0f}'.format(record.units)"/>
                                        </t>
                                        <t t-else="">
                                            <span>0</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.amount">
                                            <span t-esc="'{:,.0f}'.format(record.amount)"/>
                                        </t>
                                        <t t-else="">
                                            <span>0</span>
                                        </t>
                                    </td>
                                    <td style="border: 1px solid #dee2e6; padding: 8px;">
                                        <t t-if="record.status == 'active'">Hoạt động</t>
                                        <t t-else="">Không hoạt động</t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
