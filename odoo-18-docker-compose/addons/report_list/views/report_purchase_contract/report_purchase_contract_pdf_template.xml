<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_list.report_purchase_contract_pdf_template" name="Report Purchase Contract PDF">
        <t t-call="web.html_container">
            <div class="page">
                <div class="oe_structure"/>
                
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-center" style="color: #2c3e50; margin-bottom: 30px;">
                            <strong>DANH SÁCH HỢP ĐỒNG MUA</strong>
                        </h2>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <p><strong>Công ty:</strong> <span t-esc="company_name"/></p>
                                <p><strong>Người xuất báo cáo:</strong> <span t-esc="user_name"/></p>
                            </div>
                            <div class="col-6 text-right">
                                <p><strong>Thời gian xuất:</strong> <span t-esc="export_time"/></p>
                                <p><strong>Tổng số bản ghi:</strong> <span t-esc="total_records"/></p>
                            </div>
                        </div>
                        
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm" style="font-size: 11px;">
                                <thead style="background-color: #2c3e50; color: white;">
                                    <tr>
                                        <th style="width: 5%;">STT</th>
                                        <th style="width: 10%;">Số Hợp đồng</th>
                                        <th style="width: 8%;">Số TK</th>
                                        <th style="width: 10%;">Số TK GDCK</th>
                                        <th style="width: 15%;">Khách hàng</th>
                                        <th style="width: 10%;">Số tiền</th>
                                        <th style="width: 10%;">Ngày HĐ mua</th>
                                        <th style="width: 8%;">Ngày mua</th>
                                        <th style="width: 8%;">Ngày thanh toán</th>
                                        <th style="width: 6%;">Kỳ hạn</th>
                                        <th style="width: 6%;">Lãi suất</th>
                                        <th style="width: 8%;">Số ngày tham gia</th>
                                        <th style="width: 12%;">Tiền lãi dự kiến khi đến hạn</th>
                                        <th style="width: 12%;">Gốc + lãi dự kiến khi đến hạn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="records" t-as="record">
                                        <tr>
                                            <td t-esc="record.stt"/>
                                            <td t-esc="record.so_hop_dong"/>
                                            <td t-esc="record.so_tk"/>
                                            <td t-esc="record.so_tk_gdck"/>
                                            <td t-esc="record.khach_hang"/>
                                            <td class="text-right" t-esc="record.so_tien"/>
                                            <td t-esc="record.ngay_hd_mua"/>
                                            <td t-esc="record.ngay_mua"/>
                                            <td t-esc="record.ngay_thanh_toan"/>
                                            <td t-esc="record.ky_han"/>
                                            <td class="text-right" t-esc="record.lai_suat"/>
                                            <td class="text-right" t-esc="record.so_ngay_tham_gia"/>
                                            <td class="text-right" t-esc="record.tien_lai_du_kien"/>
                                            <td class="text-right" t-esc="record.goc_lai_du_kien"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <p style="font-size: 12px; color: #6c757d;">
                                    Báo cáo được tạo tự động từ hệ thống quản lý quỹ đầu tư
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
</odoo>
