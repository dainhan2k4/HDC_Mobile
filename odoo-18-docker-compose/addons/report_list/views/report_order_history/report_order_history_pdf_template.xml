<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_list.report_order_history_pdf_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    
                    <div class="row">
                        <div class="col-6">
                            <h2>Báo cáo Sổ lệnh lịch sử</h2>
                        </div>
                        <div class="col-6 text-right">
                            <p><strong>Công ty:</strong> <span t-esc="company_name"/></p>
                            <p><strong>Thời gian xuất:</strong> <span t-esc="export_time"/></p>
                            <p><strong>Người xuất:</strong> <span t-esc="user_name"/></p>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <p><strong>Tổng số bản ghi:</strong> <span t-esc="total_records"/></p>
                            <t t-if="selected_security">
                                <p><strong>Mã CK được lọc:</strong> <span t-esc="selected_security"/></p>
                            </t>
                            <t t-if="from_date">
                                <p><strong>Từ ngày:</strong> <span t-esc="from_date"/></p>
                            </t>
                            <t t-if="to_date">
                                <p><strong>Đến ngày:</strong> <span t-esc="to_date"/></p>
                            </t>
                            <t t-if="status">
                                <p><strong>Trạng thái:</strong> <span t-esc="status"/></p>
                            </t>
                        </div>
                    </div>
                    
                    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                        <thead>
                            <tr style="background-color: #343a40; color: white;">
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Giờ đặt</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Trạng thái</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Số TK</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Số TK GDCK</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Khách hàng</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">NVCS</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Loại lệnh</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Lệnh</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Mã CK</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">KL đặt</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Giá đặt</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">KL khớp</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Giá khớp</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">KL chờ</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Giá chờ</th>
                                <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">SHL</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="records" t-as="record">
                                <tr>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.gio_dat"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.trang_thai"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.so_tk"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.so_tk_gdck"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.khach_hang"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.nvcs"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.loai_lenh"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.lenh"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.ma_ck"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: right;" t-esc="record.kl_dat"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: right;" t-esc="record.gia_dat"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: right;" t-esc="record.kl_khop"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: right;" t-esc="record.gia_khop"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: right;" t-esc="record.kl_cho"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: right;" t-esc="record.gia_cho"/>
                                    <td style="border: 1px solid #dee2e6; padding: 6px; text-align: center;" t-esc="record.shl"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
