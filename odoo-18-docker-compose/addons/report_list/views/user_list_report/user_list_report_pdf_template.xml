<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="user_list_report_pdf_template" name="User List Report PDF">
        <t t-call="web.external_layout">
            <t t-set="title">Danh sách Người dùng</t>
            
            <div class="page">
                <div class="oe_structure"/>
                
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-center mb-4">DANH SÁCH NGƯỜI DÙNG</h2>
                        
                        <div class="mb-3">
                            <strong>Ngày xuất báo cáo:</strong> <span t-esc="report_date"/>
                        </div>
                        
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>User</th>
                                    <th>Họ và tên</th>
                                    <th>Mã nhân viên</th>
                                    <th>Phòng ban/Bộ phận</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="records" t-as="record">
                                    <td t-esc="record.stt"/>
                                    <td t-esc="record.user"/>
                                    <td t-esc="record.full_name"/>
                                    <td t-esc="record.employee_code"/>
                                    <td t-esc="record.department"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
