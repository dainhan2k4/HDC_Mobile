<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="list_tenors_interest_rates_pdf_template" name="List Tenors Interest Rates PDF">
        <t t-call="web.external_layout">
            <t t-set="title">Danh sách Kỳ hạn và Lãi suất</t>
            
            <div class="page">
                <div class="oe_structure"/>
                
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-center mb-4">DANH SÁCH KỲ HẠN VÀ LÃI SUẤT</h2>
                        
                        <div class="mb-3">
                            <strong>Khoảng thời gian:</strong> <span t-esc="report_date_range"/>
                        </div>
                        
                        <div class="mb-3">
                            <strong>Ngày xuất báo cáo:</strong> <span t-esc="report_date"/>
                        </div>
                        
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Sản phẩm (SP)</th>
                                    <th>Ngày tạo SP</th>
                                    <th>Ngày hiệu lực</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Kỳ hạn</th>
                                    <th>Lãi suất (%)</th>
                                    <th>Người nhập/Điều chỉnh</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="records" t-as="record">
                                    <td t-esc="record.stt"/>
                                    <td t-esc="record.product_name"/>
                                    <td t-esc="record.product_creation_date"/>
                                    <td t-esc="record.effective_date"/>
                                    <td t-esc="record.end_date"/>
                                    <td t-esc="record.term"/>
                                    <td t-esc="record.interest_rate"/>
                                    <td t-esc="record.creator_name"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
