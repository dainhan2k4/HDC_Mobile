<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="aoc_report_pdf_template" name="AOC Report PDF">
        <t t-call="web.external_layout">
            <t t-set="title">Báo cáo Mở/Đóng Tài khoản</t>
            
            <div class="page">
                <div class="oe_structure"/>
                
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-center mb-4">BÁO CÁO TÌNH HÌNH MỞ/ĐÓNG TÀI KHOẢN</h2>
                        
                        <div class="mb-3">
                            <strong>Khoảng thời gian:</strong> <span t-esc="report_date_range"/>
                        </div>
                        
                        <div class="mb-3">
                            <strong>Ngày xuất báo cáo:</strong> <span t-esc="report_date"/>
                        </div>
                        
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Số TK</th>
                                    <th>TK GDCK</th>
                                    <th>Khách hàng</th>
                                    <th>Số CCCD/CC/GPKD</th>
                                    <th>Ngày cấp</th>
                                    <th>Nơi cấp</th>
                                    <th>Địa chỉ thường trú</th>
                                    <th>Địa chỉ liên hệ</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Ngày mở TK</th>
                                    <th>Ngày đóng TK</th>
                                    <th>Trạng thái</th>
                                    <th>Loại KH</th>
                                    <th>TN/NN</th>
                                    <th>NVCS</th>
                                    <th>Đơn vị</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="records" t-as="record">
                                    <td t-esc="record.stt"/>
                                    <td t-esc="record.account_number"/>
                                    <td t-esc="record.trading_account"/>
                                    <td t-esc="record.customer_name"/>
                                    <td t-esc="record.id_number"/>
                                    <td t-esc="record.id_issue_date"/>
                                    <td t-esc="record.id_issue_place"/>
                                    <td t-esc="record.permanent_address"/>
                                    <td t-esc="record.contact_address"/>
                                    <td t-esc="record.phone_number"/>
                                    <td t-esc="record.email"/>
                                    <td t-esc="record.open_date"/>
                                    <td t-esc="record.close_date"/>
                                    <td t-esc="record.status"/>
                                    <td t-esc="record.customer_type"/>
                                    <td t-esc="record.nationality_type"/>
                                    <td t-esc="record.account_manager"/>
                                    <td t-esc="record.unit"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
