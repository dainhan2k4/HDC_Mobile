<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cron job để tự động sync funds từ master data -->
        <record id="cron_auto_sync_funds" model="ir.cron">
            <field name="name">Auto Sync Funds from Master</field>
            <field name="model_id" ref="model_portfolio_fund"/>
            <field name="state">code</field>
            <field name="code">model.sync_all_from_master()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
