
<odoo>
  <template id="fund_sell" name="Fund Sell Page">
    <t t-call="web.layout">
      <t t-set="title">Kết quả lệnh mua</t>

      <t t-call-assets="web.assets_frontend" t-js="true" />
      <t t-set="head">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet"/>
      </t>

<!--      <t t-call="fund_management.fund_header_template"/>-->
      <div id="header-container"></div>

      <div class="profile-container">
        <div class="max-w-7xl mx-auto bg-white rounded-lg shadow p-6 rounded-4 mt-4">
            <div class="bg-white rounded-4 px-3 py-3">
                <nav class="navbar navbar-expand-lg navbar-light bg-white rounded-4 shadow-sm mb-4 px-3 border py-2 " >
                  <div class="collapse navbar-collapse justify-content-center">
                    <ul class="navbar-nav d-flex w-100 justify-content-center fs-5">
                      <li class="nav-item flex-fill text-center">
                        <a class="px-2 nav-link-blue" href="fund_buy">Mua</a>
                      </li>
                      <li class="nav-item flex-fill text-center">
                        <a class="px-2 nav-link-blue fw-bold nav-link-active" href="fund_sell">Bán</a>
                      </li>
                      <li class="nav-item flex-fill text-center">
                        <a class="px-2 nav-link-blue" href="#">Chuyển đổi</a>
                      </li>
                    </ul>
                  </div>
                </nav>

              <!-- Bước tiến trình -->
                <div class="progress-steps mx-auto" style="max-width: 500px;">
                  <div class="d-flex justify-content-between align-items-center mb-4">
                    <!-- Bước 1 -->
                    <div class="text-center">
                      <div class="step-circle active">1</div>
                      <small class="d-block mt-2">Đặt lệnh</small>
                    </div>

                    <!-- Đường nối -->
                    <div class="flex-grow-1 mx-2 border-top position-relative" style="top: -18px;"></div>

                    <!-- Bước 2 -->
                    <div class="text-center">
                      <div class="step-circle">2</div>
                      <small class="d-block mt-2">Xác nhận</small>
                    </div>

                    <!-- Đường nối -->
                    <div class="flex-grow-1 mx-2 border-top position-relative" style="top: -18px;"></div>

                    <!-- Bước 3 -->
                    <div class="text-center">
                      <div class="step-circle">3</div>
                      <small class="d-block mt-2">Kết quả</small>
                    </div>
                  </div>
                </div>

                <!-- Main Form -->
                <div class="row">
                      <!-- Cột trái: Thông tin đặt lệnh bán -->
                      <div class="col-md-7">
                        <div class="card p-4 shadow-sm rounded-4">
                          <h5 class="fw-semibold mb-4">Đặt lệnh bán</h5>

                          <!-- Chọn sản phẩm -->
                          <div class="mb-3">
                            <label for="fund-sell-select" class="form-label fw-semibold">Chọn sản phẩm</label>
                            <select id="fund-sell-select" class="form-select"></select>
                          </div>

                          <!-- Thông tin quỹ -->
                          <label class="form-label fw-semibold">Thông tin CCQ</label>
                          <ul class="list-group list-group-flush border rounded-3 fs-6 mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Tổng giá trị đầu tư</span>
                              <strong id="fund-sell-amount">--</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>NAV hiện tại</span>
                              <strong id="fund-sell-current-nav">--</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Khả dụng</span>
                              <strong id="fund-sell-units">--</strong>
                            </li>
                          </ul>


                          <!-- Nhập số lượng muốn bán -->
                          <div class="mb-3">
                            <label for="fund-sell-amount-input" class="form-label fw-semibold">Số lượng muốn bán</label>
                            <input type="number" id="fund-sell-amount-input" class="form-control" min="1" placeholder="Nhập số lượng muốn bán" />
                            <small class="text-muted d-block mt-1">Phải nhỏ hơn số lượng khả dụng</small>
                          </div>

                          <!-- Phí bán -->
                          <div class="mb-2">
                            <span class="me-2">Phí bán:</span>
                            <strong>--</strong>
                          </div>
                        </div>
                      </div>


                      <!-- Cột phải: Giá trị và xác nhận -->
                      <div class="col-md-5">
                        <div class="card p-4 shadow-sm rounded-4">
                          <h6 class="fw-semibold mb-3">Giá trị ước tính sau thuế, phí</h6>
                          <div class="fs-3 fw-bold text-primary mb-3" id="fund-sell-estimated-value">--</div>
                          <p class="small text-muted">
                            (*) Giá trị thực nhận phụ thuộc vào NAV của ngày phiên khớp lệnh
                          </p>

                          <h6 class="fw-semibold mb-3">Thông tin đầu tư</h6>
                          <ul class="list-group list-group-flush border rounded-3">
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Quỹ đầu tư</span>
                              <strong id="fund-sell-summary-name">--</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Chương trình</span>
                              <strong>FFC1 - Flex</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Loại lệnh</span>
                              <strong>Bán</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Ngày đặt lệnh</span>
                              <strong>17/04/2022, 14:41:36</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Phiên giao dịch</span>
                              <strong>19/04/2022</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                              <span>Số lượng bán</span>
                              <strong id="fund-sell-summary-amount">--</strong>
                            </li>
                          </ul>

                          <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-pill btn-sell px-4" id="back-btn-sell">Quay lại</button>
                            <button type="button" class="btn btn-pill btn-buy px-4" id="fund-sell-confirm-btn">Xác nhận</button>
                          </div>
                        </div>
                      </div>
                </div>
            </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
