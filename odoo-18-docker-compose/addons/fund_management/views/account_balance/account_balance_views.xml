<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Account Balance List View -->
        <record id="view_portfolio_account_balance_list" model="ir.ui.view">
            <field name="name">portfolio.account_balance.list</field>
            <field name="model">portfolio.account_balance</field>
            <field name="arch" type="xml">
                <list>
                    <field name="user_id"/>
                    <field name="balance" widget="monetary"/>
                </list>
            </field>
        </record>

        <!-- Account Balance Form View -->
        <record id="view_portfolio_account_balance_form" model="ir.ui.view">
            <field name="name">portfolio.account_balance.form</field>
            <field name="model">portfolio.account_balance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Account Balance">
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="balance" widget="monetary"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

