<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Trading Config List View -->
    <record id="view_trading_config_tree" model="ir.ui.view">
        <field name="name">trading.config.tree</field>
        <field name="model">trading.config</field>
        <field name="arch" type="xml">
            <list string="Trading Configurations">
                <field name="name"/>
                <field name="active"/>
                <field name="api_url"/>
                <field name="consumer_id"/>
                <field name="is_connected" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Trading Config Form View -->
    <record id="view_trading_config_form" model="ir.ui.view">
        <field name="name">trading.config.form</field>
        <field name="model">trading.config</field>
        <field name="arch" type="xml">
            <form string="Trading Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_connection" type="object" class="oe_stat_button" icon="fa-plug">
                            <field name="is_connected" widget="boolean_button" options='{"terminology": "connection"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="api_url"/>
                            <field name="stream_url"/>
                        </group>
                        <group>
                            <field name="is_connected" readonly="1"/>
                            <field name="read_token_expire_at" readonly="1"/>
                            <field name="write_token_expire_at" readonly="1"/>
                        </group>
                    </group>
                    <group string="API Credentials">
                        <group>
                            <field name="user_id"/>
                            <field name="consumer_id" password="True"/>
                            <field name="consumer_secret" password="True"/>
                            <field name="two_fa_type"/>
                            <field name="otp_type"/>
                            <field name="account"/>
                        </group>
                        <group>
                            <field name="private_key" password="True" widget="text"/>
                            <field name="last_notify_id"/>
                        </group>
                    </group>
                    <group string="Tokens" col="2">
                        <group>
                            <field name="read_access_token" readonly="1" password="True"/>
                        </group>
                        <group>
                            <field name="write_access_token" readonly="1" password="True"/>
                            <field name="write_token_expires_in" readonly="1" 
                                   invisible="not write_access_token"
                                   help="Thời gian còn lại của write token. Token sẽ tự động hết hạn sau thời gian này và cần verify OTP lại."/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" widget="text"/>
                    </group>
                    <footer>
                        <button name="action_test_connection" string="Test Connection" type="object" class="btn-primary"/>
                        <button name="action_get_otp" string="Get OTP" type="object" invisible="two_fa_type != '1'"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Trading Config Search View -->
    <record id="view_trading_config_search" model="ir.ui.view">
        <field name="name">trading.config.search</field>
        <field name="model">trading.config</field>
        <field name="arch" type="xml">
            <search string="Trading Configurations">
                <field name="name"/>
                <field name="consumer_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Trading Config Action -->
    <record id="action_trading_config" model="ir.actions.act_window">
        <field name="name">API Configurations</field>
        <field name="res_model">trading.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>

