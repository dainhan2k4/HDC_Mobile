<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Order History Views -->
    <record id="view_trading_order_history_tree" model="ir.ui.view">
        <field name="name">trading.order.history.tree</field>
        <field name="model">trading.order.history</field>
        <field name="arch" type="xml">
            <list string="Order History">
                <field name="name"/>
                <field name="account"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_order_history_form" model="ir.ui.view">
        <field name="name">trading.order.history.form</field>
        <field name="model">trading.order.history</field>
        <field name="arch" type="xml">
            <form string="Order History">
                <header>
                    <button name="action_sync_history" string="Sync History" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer/>
            </form>
        </field>
    </record>

    <record id="action_trading_order_history" model="ir.actions.act_window">
        <field name="name">Order History</field>
        <field name="res_model">trading.order.history</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Order Book Views -->
    <record id="view_trading_order_book_tree" model="ir.ui.view">
