            <list string="Order Books">
                <field name="name"/>
                <field name="account"/>
                <field name="book_type"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_order_book_form" model="ir.ui.view">
        <field name="name">trading.order.book.form</field>
        <field name="model">trading.order.book</field>
        <field name="arch" type="xml">
            <form string="Order Book">
                <header>
                    <button name="action_sync_order_book" string="Sync Order Book" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                            <field name="book_type"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer/>
            </form>
        </field>
    </record>

    <record id="action_trading_order_book" model="ir.actions.act_window">
        <field name="name">Order Book</field>
        <field name="res_model">trading.order.book</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Rate Limit Views -->
    <record id="view_trading_rate_limit_tree" model="ir.ui.view">
        <field name="name">trading.rate.limit.tree</field>
        <field name="model">trading.rate.limit</field>
        <field name="arch" type="xml">
            <list string="Rate Limits">
                <field name="name"/>
                <field name="config_id"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_rate_limit_form" model="ir.ui.view">
        <field name="name">trading.rate.limit.form</field>
        <field name="model">trading.rate.limit</field>
        <field name="arch" type="xml">
            <form string="Rate Limit">
                <header>
                    <button name="action_get_rate_limit" string="Get Rate Limit" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
