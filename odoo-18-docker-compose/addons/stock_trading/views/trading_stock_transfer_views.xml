<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Transfer Views -->
    <record id="view_trading_stock_transfer_tree" model="ir.ui.view">
        <field name="name">trading.stock.transfer.tree</field>
        <field name="model">trading.stock.transfer</field>
        <field name="arch" type="xml">
            <list string="Stock Transfers" decoration-success="state == 'success'" decoration-danger="state == 'error'">
                <field name="name"/>
                <field name="state" widget="badge"/>
                <field name="account"/>
                <field name="beneficiary_account"/>
                <field name="instrument_code"/>
                <field name="exchange_id"/>
                <field name="quantity"/>
                <field name="submitted_at"/>
            </list>
        </field>
    </record>

    <record id="view_trading_stock_transfer_form" model="ir.ui.view">
        <field name="name">trading.stock.transfer.form</field>
        <field name="model">trading.stock.transfer</field>
        <field name="arch" type="xml">
            <form string="Stock Transfer">
                <header>
                    <button name="action_submit_transfer" string="Submit Transfer" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,success"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                            <field name="beneficiary_account"/>
                            <field name="instrument_id"/>
                            <field name="instrument_code" readonly="1"/>
                            <field name="exchange_id"/>
                            <field name="quantity"/>
                            <field name="code" password="True"/>
                        </group>
                        <group>
                            <field name="submitted_at" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Error" invisible="not error_message">
                            <field name="error_message" widget="text" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_trading_stock_transfer" model="ir.actions.act_window">
        <field name="name">Stock Transfer</field>
        <field name="res_model">trading.stock.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Stock Transferable Views -->
    <record id="view_trading_stock_transferable_tree" model="ir.ui.view">
        <field name="name">trading.stock.transferable.tree</field>
        <field name="model">trading.stock.transferable</field>
        <field name="arch" type="xml">
            <list string="Transferable Stocks">
                <field name="name"/>
                <field name="account"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_stock_transferable_form" model="ir.ui.view">
        <field name="name">trading.stock.transferable.form</field>
        <field name="model">trading.stock.transferable</field>
        <field name="arch" type="xml">
            <form string="Transferable Stocks">
                <header>
                    <button name="action_get_transferable" string="Get Transferable" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer/>
            </form>
        </field>
    </record>

    <record id="action_trading_stock_transferable" model="ir.actions.act_window">
        <field name="name">Transferable Stocks</field>
        <field name="res_model">trading.stock.transferable</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Stock Transfer History Views -->
    <record id="view_trading_stock_transfer_history_tree" model="ir.ui.view">
        <field name="name">trading.stock.transfer.history.tree</field>
        <field name="model">trading.stock.transfer.history</field>
        <field name="arch" type="xml">
            <list string="Stock Transfer History">
                <field name="name"/>
                <field name="account"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_stock_transfer_history_form" model="ir.ui.view">
        <field name="name">trading.stock.transfer.history.form</field>
        <field name="model">trading.stock.transfer.history</field>
        <field name="arch" type="xml">
            <form string="Stock Transfer History">
                <header>
                    <button name="action_sync_history" string="Sync History" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer/>
            </form>
        </field>
    </record>

    <record id="action_trading_stock_transfer_history" model="ir.actions.act_window">
        <field name="name">Stock Transfer History</field>
        <field name="res_model">trading.stock.transfer.history</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

