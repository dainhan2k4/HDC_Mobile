<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Balance Views -->
    <record id="view_trading_account_balance_tree" model="ir.ui.view">
        <field name="name">trading.account.balance.tree</field>
        <field name="model">trading.account.balance</field>
        <field name="arch" type="xml">
            <list string="Account Balances">
                <field name="name"/>
                <field name="user_id"/>
                <field name="account"/>
                <field name="balance_type"/>
                <field name="cash_balance" widget="monetary"/>
                <field name="available_cash" widget="monetary"/>
                <field name="purchasing_power" widget="monetary"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_account_balance_form" model="ir.ui.view">
        <field name="name">trading.account.balance.form</field>
        <field name="model">trading.account.balance</field>
        <field name="arch" type="xml">
            <form string="Account Balance">
                <header>
                    <button name="action_sync_balance" string="Sync Balance" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="user_id"/>
                                <field name="config_id" readonly="1" invisible="not user_id"/>
                                <field name="account"/>
                                <field name="balance_type"/>
                                <field name="auto_sync"/>
                            </group>
                            <group>
                                <field name="cash_balance" widget="monetary" readonly="1"/>
                                <field name="available_cash" widget="monetary" readonly="1"/>
                                <field name="purchasing_power" widget="monetary" readonly="1"/>
                                <field name="last_sync" readonly="1"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" widget="text" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer/>
            </form>
        </field>
    </record>

    <record id="action_trading_account_balance" model="ir.actions.act_window">
        <field name="name">Account Balance</field>
        <field name="res_model">trading.account.balance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Position Views -->
    <record id="view_trading_position_tree" model="ir.ui.view">
        <field name="name">trading.position.tree</field>
        <field name="model">trading.position</field>
        <field name="arch" type="xml">
            <list string="Positions">
                <field name="name"/>
                <field name="account"/>
                <field name="position_type"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_position_form" model="ir.ui.view">
        <field name="name">trading.position.form</field>
        <field name="model">trading.position</field>
        <field name="arch" type="xml">
            <form string="Position">
                <header>
                    <button name="action_sync_position" string="Sync Position" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                            <field name="position_type"/>
                            <field name="query_summary" invisible="position_type != 'derivative'"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" widget="text" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer/>
            </form>
        </field>
    </record>

    <record id="action_trading_position" model="ir.actions.act_window">
        <field name="name">Position</field>
        <field name="res_model">trading.position</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Max Quantity Views -->
    <record id="view_trading_max_quantity_tree" model="ir.ui.view">
        <field name="name">trading.max.quantity.tree</field>
        <field name="model">trading.max.quantity</field>
        <field name="arch" type="xml">
            <list string="Max Quantities">
                <field name="name"/>
                <field name="account"/>
                <field name="instrument_code"/>
                <field name="quantity_type"/>
                <field name="price" widget="monetary"/>
                <field name="max_quantity"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="view_trading_max_quantity_form" model="ir.ui.view">
        <field name="name">trading.max.quantity.form</field>
        <field name="model">trading.max.quantity</field>
        <field name="arch" type="xml">
            <form string="Max Quantity">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="config_id"/>
                            <field name="account"/>
                            <field name="instrument_id"/>
                            <field name="instrument_code" readonly="1"/>
                            <field name="quantity_type"/>
                            <field name="price" widget="monetary"/>
                            <field name="max_quantity" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="API Response">
                            <field name="raw_response" widget="text" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_get_max_quantity" string="Get Max Quantity" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_trading_max_quantity" model="ir.actions.act_window">
        <field name="name">Max Quantity</field>
        <field name="res_model">trading.max.quantity</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

