<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View: Kỳ hạn / Lãi suất -->
    <record id="view_nav_term_rate_tree" model="ir.ui.view">
        <field name="name">nav.term.rate.list</field>
        <field name="model">nav.term.rate</field>
        <field name="arch" type="xml">
            <list string="Kỳ hạn / Lãi suất" editable="bottom" create="true" edit="false" delete="true">
                <field name="term_months" string="Kỳ hạn (tháng)"/>
                <field name="interest_rate" digits="[16, 2]" string="Lãi suất (%)"/>
                <field name="effective_date" string="Ngày hiệu lực"/>
                <field name="end_date" string="Ngày kết thúc"/>
                <field name="create_uid" string="Người tạo"/>
                <field name="write_uid" string="Người sửa"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="description" widget="text"/>
            </list>
        </field>
    </record>

    <!-- Form View: Kỳ hạn / Lãi suất -->
    <record id="view_nav_term_rate_form" model="ir.ui.view">
        <field name="name">nav.term.rate.form</field>
        <field name="model">nav.term.rate</field>
        <field name="arch" type="xml">
            <form string="Kỳ hạn / Lãi suất">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>Cấu hình kỳ hạn / lãi suất</h1>
                    </div>
                    
                    <group>
                        <group string="Cấu hình">
                            <field name="term_months" string="Kỳ hạn (tháng)"/>
                            <field name="interest_rate" digits="[16, 2]" string="Lãi suất (%)"/>
                            <field name="effective_date" string="Ngày hiệu lực"/>
                            <field name="end_date" string="Ngày kết thúc"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Thông tin hệ thống">
                            <field name="create_uid" string="Người tạo" readonly="1"/>
                            <field name="create_date" string="Ngày tạo" readonly="1"/>
                            <field name="write_uid" string="Người sửa cuối" readonly="1"/>
                            <field name="write_date" string="Ngày sửa cuối" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Mô tả">
                            <field name="description" widget="text" placeholder="Nhập mô tả kỳ hạn / lãi suất..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View: Kỳ hạn / Lãi suất -->
    <record id="view_nav_term_rate_search" model="ir.ui.view">
        <field name="name">nav.term.rate.search</field>
        <field name="model">nav.term.rate</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Kỳ hạn / Lãi suất">
                <field name="term_months"/>
                <field name="interest_rate"/>
                <field name="effective_date"/>
                <field name="end_date"/>
                <field name="create_uid"/>
                <field name="write_uid"/>
                <separator/>
                <filter string="Đang dùng" name="active_true" domain="[('active','=',True)]"/>
                <filter string="Ngưng dùng" name="active_false" domain="[('active','=',False)]"/>
                <filter string="Hiệu lực hôm nay" name="effective_today" domain="[('effective_date','&lt;=',context_today()),('end_date','&gt;=',context_today())]"/>
                <filter string="Hết hiệu lực" name="expired" domain="[('end_date','&lt;',context_today())]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Người tạo" name="group_create_uid" context="{'group_by':'create_uid'}"/>
                    <filter string="Người sửa" name="group_write_uid" context="{'group_by':'write_uid'}"/>
                    <filter string="Ngày hiệu lực" name="group_effective_date" context="{'group_by':'effective_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_nav_term_rate" model="ir.actions.act_window">
        <field name="name">Kỳ hạn / Lãi suất</field>
        <field name="res_model">nav.term.rate</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="views" eval="[(ref('view_nav_term_rate_tree'),'list'), (ref('view_nav_term_rate_form'),'form')]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có cấu hình kỳ hạn / lãi suất
            </p>
            <p>
                Nhấn "Tạo" để thêm cấu hình.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_nav_term_rate"
              name="Kỳ hạn / Lãi suất"
              parent="menu_nav_management_root"
              action="action_nav_term_rate"
              sequence="10"/>
</odoo>


