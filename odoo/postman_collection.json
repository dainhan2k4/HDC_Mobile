{
  "info": {
    "name": "Odoo Investment Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection các endpoint của hệ thống Quản lý Quỹ Đầu tư Odoo"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:10018"
    }
  ],
  "item": [
    {
      "name": "Authentication & Custom Auth",
      "item": [
        {
          "name": "Signup với OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/web/signup/otp",
              "host": ["{{base_url}}"],
              "path": ["web", "signup", "otp"]
            },
            "body": {
              "mode": "raw",
              "raw": "{}"
            }
          }
        },
        {
          "name": "Xác thực OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/web/signup/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["web", "signup", "verify-otp"]
            },
            "body": {
              "mode": "raw",
              "raw": "{}"
            }
          }
        }
      ]
    },
    {
      "name": "Fund Management",
      "item": [
        {
          "name": "Lấy danh sách quỹ",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/data_fund",
              "host": ["{{base_url}}"],
              "path": ["data_fund"]
            }
          }
        },
        {
          "name": "So sánh quỹ (UI)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/fund_compare",
              "host": ["{{base_url}}"],
              "path": ["fund_compare"]
            }
          }
        },
        {
          "name": "Mua quỹ (UI)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/fund_buy",
              "host": ["{{base_url}}"],
              "path": ["fund_buy"]
            }
          }
        },
        {
          "name": "Submit Mua quỹ",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/fund_confirm",
              "host": ["{{base_url}}"],
              "path": ["fund_confirm"]
            }
          }
        },
        {
          "name": "Bán quỹ (UI)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/fund_sell",
              "host": ["{{base_url}}"],
              "path": ["fund_sell"]
            }
          }
        }
      ]
    },
    {
      "name": "Investment Management",
      "item": [
        {
          "name": "Tạo đầu tư mới",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/create_investment",
              "host": ["{{base_url}}"],
              "path": ["create_investment"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fund_id\": 1,\n  \"amount\": 1000000,\n  \"units\": 100\n}"
            }
          }
        },
        {
          "name": "Danh sách đầu tư của user",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/data_investment",
              "host": ["{{base_url}}"],
              "path": ["data_investment"]
            }
          }
        },
        {
          "name": "Submit bán quỹ",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/submit_fund_sell",
              "host": ["{{base_url}}"],
              "path": ["submit_fund_sell"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"investment_id\": 1,\n  \"quantity\": 10,\n  \"estimated_value\": 250000\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Portfolio",
      "item": [
        {
          "name": "Widget danh mục đầu tư",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/portfolio_widget",
              "host": ["{{base_url}}"],
              "path": ["portfolio_widget"]
            }
          }
        }
      ]
    },
    {
      "name": "Account Balance",
      "item": [
        {
          "name": "Số dư tài khoản",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/account_balance",
              "host": ["{{base_url}}"],
              "path": ["account_balance"]
            }
          }
        }
      ]
    },
    {
      "name": "Investor Profile",
      "item": [
        {
          "name": "Thông tin cá nhân (UI)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/personal_profile",
              "host": ["{{base_url}}"],
              "path": ["personal_profile"]
            }
          }
        },
        {
          "name": "API - Lấy dữ liệu profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/data_personal_profile",
              "host": ["{{base_url}}"],
              "path": ["data_personal_profile"]
            }
          }
        },
        {
          "name": "API - Lưu thông tin profile",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {
              "raw": "{{base_url}}/save_personal_profile",
              "host": ["{{base_url}}"],
              "path": ["save_personal_profile"]
            },
            "body": {"mode": "raw", "raw": "{}"}
          }
        }
      ]
    }
  ]
} 